.books-lists {
  box-sizing: border-box;
  padding: 0 0.3rem;
}
.books-lists .articleList {
  margin-top: 0.5rem;
}
.books-lists .articleList .list-box {
  padding: 0.5rem 0.05rem;
  overflow: hidden;
  width: 100%;
}
.books-lists .articleList .list-box .image-box {
  width: 28%;
  float: left;
}
.books-lists .articleList .list-box .image-box image {
  box-shadow: darkgrey 0px 0px 3px 1px;
  width: 192rpx;
  height: 261rpx;
}
.books-lists .articleList .list-box .text {
  box-sizing: border-box;
  padding: 0.1rem 0.1rem 0.1rem 0.5rem;
  width: 72%;
  float: right;
}
.books-lists .articleList .list-box .text .title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: bolder;
  font-size: 18px;
  margin-top: 0.2rem;
}
.books-lists .articleList .list-box .text .content {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 25rpx;
  margin-top: 0.8rem;
  color: #A0A0A0;
}
.books-lists .articleList .list-box .text .detail {
  overflow: hidden;
  width: 100%;
  margin-top: 1rem;
}
.books-lists .articleList .list-box .text .detail .tip {
  margin-top: 0.3rem;
  float: left;
  font-size: 20rpx;
  color: #AFAFAF;
}
.books-lists .articleList .list-box .text .detail .tip text:nth-of-type(1) {
  font-size: 20rpx;
  margin-right: 0.1rem;
}
.books-lists .articleList .list-box .text .detail .tip text:nth-of-type(2) {
  margin-right: 0.55rem;
}
.books-lists .articleList .list-box .text .detail .tip text:nth-of-type(3) {
  color: #B26871;
}
.books-lists .articleList .list-box .text .detail .tag {
  float: right;
  font-size: 20rpx;
  color: #AFAFAF;
}
.books-lists .articleList .list-box .text .detail .tag text {
  background-color: #F0EFF4;
  display: inline-block;
  padding: 0.2rem 0.35rem;
  border-radius: 20rpx;
}
.books-lists .articleList .list-box .text .detail .tag text:nth-of-type(1) {
  /*margin-left: .3rem;*/
  margin-right: 0.4rem;
}
.books-lists .articleList .list-box .text .detail .tag text:nth-of-type(2) {
  margin-right: 0.4rem;
}
