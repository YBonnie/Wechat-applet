.content {
  padding: 0.5rem 0.5rem 0;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.content .part-one {
  overflow: hidden;
  width: 100%;
}
.content .part-one .image-box {
  width: 8%;
  float: left;
}
.content .part-one .image-box image {
  margin-top: 0.2rem;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.content .part-one .name-box {
  float: left;
  font-size: 25rpx;
  margin-left: 15rpx;
}
.content .part-one .name-box view:nth-of-type(1) {
  color: #6C6C6C;
}
.content .part-one .name-box view:nth-of-type(2) {
  color: #A7A7A7;
  margin-top: 5rpx;
}
.content .part-one .level-box {
  color: #6C6C6C;
  float: left;
  margin-left: 15rpx;
  font-size: 22rpx;
  padding: 5rpx 20rpx;
  border: 1px solid #E8E8E8;
  border-radius: 20rpx;
}
.content .part-one .share-box {
  float: right;
  font-size: 30rpx;
  background-color: #EF4746;
  border-radius: 20rpx ;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #ffffff;
  margin-top: 15rpx;
}
.content .part-two {
  margin-top: 30rpx;
  width: 60%;
  font-size: 35rpx;
}
.content .part-three {
  margin-top: 35rpx;
  color: #8B8B8D;
  font-size: 30rpx;
}
.content .part-four {
  clear: both;
}
.content .part-four .box {
  margin-top: 35rpx;
}
.content .part-four .box .box-one {
  overflow: hidden;
  width: 100%;
}
.content .part-four .box .box-one .image-box {
  float: left;
}
.content .part-four .box .box-one .image-box image {
  width: 120rpx;
  height: 170rpx;
}
.content .part-four .box .box-one .txt {
  float: left;
  margin-left: 25rpx;
}
.content .part-four .box .box-one .txt .title {
  font-size: 30rpx;
  color: #333333;
  font-weight: bolder;
}
.content .part-four .box .box-one .txt .author {
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #CACACA;
}
.content .part-four .box .box-one .txt .author text {
  font-size: 28rpx;
  color: #ADADAD;
}
.content .part-four .box .box-one .txt .renqi {
  margin-top: 15rpx;
  color: #9A9BA1;
  font-size: 28rpx;
}
.content .part-four .box .box-one .txt .renqi text:nth-of-type(2) {
  margin-left: 25rpx;
}
.content .part-four .box .box-two {
  margin-top: 10rpx;
  color: #68676B;
  font-size: 25rpx;
}
