.content {
  padding: 0.5rem 0.5rem 0;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.content .nav-one {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center ;
  width: 100%;
  padding: 0 0 25rpx 0;
  border-bottom: 1px solid #EBEBEB;
}
.content .nav-one view {
  width: 15%;
  text-align: center;
  margin-left: 10rpx;
  font-size: 25rpx;
  color: #8B8A8F;
}
.content .nav-one .navActiveOne {
  font-size: 28rpx;
  padding: 5rpx 0;
  border: 1px solid #F04C4B;
  color: #F04C4B;
  border-radius: 25rpx;
}
.content .nav-two {
  margin-top: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center ;
  width: 100%;
  padding: 0 0 25rpx 0;
  border-bottom: 1px solid #EBEBEB;
}
.content .nav-two view {
  width: 15%;
  text-align: center;
  margin-left: 10rpx;
  font-size: 25rpx;
  color: #8B8A8F;
}
.content .nav-two .navActiveOne {
  font-size: 26rpx;
  padding: 5rpx 5rpx;
  border: 1px solid #F04C4B;
  color: #F04C4B;
  border-radius: 25rpx;
}
.content .article-box {
  width: 100%;
}
.content .article-box .scroll-box {
  width: 100%;
  box-sizing: border-box;
  padding: 25rpx;
}
.content .article-box .scroll-box .list-box {
  margin-bottom: 35rpx;
  width: 100%;
  overflow: hidden;
}
.content .article-box .scroll-box .list-box .image-box {
  float: left;
  width: 25%;
  height: 200rpx;
}
.content .article-box .scroll-box .list-box .image-box image {
  box-shadow: darkgrey 0 0 3px 1px;
  width: 100%;
  height: 100%;
}
.content .article-box .scroll-box .list-box .list-txt {
  float: right;
  width: 75%;
  box-sizing: border-box;
  padding-left: 25rpx;
}
.content .article-box .scroll-box .list-box .list-txt view:nth-of-type(1) {
  font-size: 33rpx;
  font-weight: bolder;
}
.content .article-box .scroll-box .list-box .list-txt view:nth-of-type(2) {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #8A8A8A;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.content .article-box .scroll-box .list-box .list-txt view:nth-of-type(3) {
  margin-top: 20rpx;
  font-size: 25rpx;
}
.content .article-box .scroll-box .list-box .list-txt view:nth-of-type(3) text:nth-of-type(1) {
  color: #BE4A4C;
  margin-right: 15rpx;
}
.content .article-box .scroll-box .list-box .list-txt view:nth-of-type(3) text:nth-of-type(2) {
  margin-left: 50rpx;
  color: #BE4A4C;
  margin-right: 15rpx;
}
