.content {
  padding: 0.5rem 0.5rem 0;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.content .nav {
  overflow: hidden;
  width: 100%;
}
.content .nav view {
  float: left;
  width: 50%;
  text-align: center;
}
.content .nav view text {
  display: inline-block;
  font-size: 30rpx;
  padding: 0 0 20rpx;
  color: #666666;
  text-align: center;
}
.content .nav view .activeTxt {
  border-bottom: 1px solid #EF4746;
}
.content .bookList {
  margin-top: 30rpx;
}
.content .bookList .count {
  text-align: left;
  font-size: 30rpx;
  color: #A8A8A8;
  font-weight: bolder;
  padding: 0 0 25rpx;
  border-bottom: 1px solid #ECECEE;
}
.content .bookList .noBooks {
  color: #A8A8A8;
  text-align: center;
  margin-top: 50rpx;
}
.content .bookList .btn {
  width: 60%;
  border: none;
  background-color: #EF4746;
  color: #FFFFFF;
  margin-top: 50%;
  border-radius: 35rpx;
}
.content .showbookList {
  margin-top: 30rpx;
}
.content .showbookList .count {
  text-align: left;
  font-size: 30rpx;
  color: #A8A8A8;
  font-weight: bolder;
  padding: 0 0 25rpx;
  border-bottom: 1px solid #ECECEE;
}
.content .showbookList .list-box {
  margin-top: 30rpx;
  overflow: hidden;
  width: 100%;
}
.content .showbookList .list-box .image-box {
  float: left;
}
.content .showbookList .list-box .image-box image {
  box-shadow: darkgrey 0px 0px 3px 1px;
  width: 110rpx;
  height: 140rpx;
}
.content .showbookList .list-box .txt-box {
  float: left;
  margin-left: 20rpx;
}
.content .showbookList .list-box .txt-box .title {
  font-size: 30rpx;
  font-weight: bolder;
}
.content .showbookList .list-box .txt-box .author {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #A3A3A3;
}
.content .showbookList .list-box .txt-box .author text {
  font-size: 25rpx;
  color: #A3A3A3;
}
.content .showbookList .list-box .txt-box .renqi {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #A3A3A3;
}
.content .showbookList .list-box .txt-box .renqi text:nth-of-type(2) {
  margin-left: 30rpx;
}
.content .showbookList .list-box .iconRight {
  float: right;
  margin-top: 50rpx;
}
.content .showbookList .list-box .iconRight .shu {
  width: 50rpx;
  height: 50rpx;
}
